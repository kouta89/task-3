<%= flash[:notice] %>
<!-- ユーザーの詳細 -->
<div class="container px-5 px-sm-0">
  <div class="row">

    <!--共通レイアウト-->
    <%= render 'books/list', book: @book, user: current_user %>

    <!-- myユーザーの投稿一覧 -->
    <div class="col-md-8 offset-md-1">

      <h2>Books</h2>
      <table class="table table-hover table-inverse">
        <thead>
          <tr>
            <th></th>
            <th>Title</th>
            <th>Opinion</th>
          </tr>
        </thead>
        <tbody>
          <% @books.each do |book| %>
            <tr>
              <td><%= image_tag @user.get_profile_image(80,80) %></td>
              <td>
                <%= link_to book_path(book.id),method: :get do %>
                  <%= book.title %></td>
                <% end %>
              <td><%= book.body %></td>
            </tr>
          <% end %>
        </tbody>
      </table>
    </div>
  </div>
</div>
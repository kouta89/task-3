<%= flash[:hoge] %>

<div class="container px-5 px-sm-0">
  <div class="row">

    <!--共通レイアウト-->
    <%= render 'books/list', book: @bookn, user: @user %>

    <!-- ユーザーの投稿情報-->
    <div class="col-md-8 offset-md-1">

      <h2>Book detail</h2>
      <table class="table table-hover table-inverse">

        <tbody>
          <tr>
            <td>
              <%= link_to books_path(@book.user_id) ,method: :get do %>
                <%= image_tag @user.get_profile_image(80,80) %>
              <% end %>
              <br>
              <%= link_to user_path(@book.user) ,method: :get do %>
                <%= @book.user.name %>
              <% end %>
            </td>
            <td>
              <%= link_to book_path(@book.id) ,method: :get do %>
                <%= @book.title %>
              <% end %>
            </td>
            <td><%= @book.body %></td>
            <td>
              <% if @book.user == current_user %>
                <%= link_to "Edit",edit_book_path(@book),class:"btn btn-sm btn-success" %>
              <% end %>
            </td>
            <td>
              <% if @book.user == current_user %>
                <%= link_to "Destroy",book_path(@book),method: :delete,class:"btn btn-sm btn-danger" %>
              <% end %>
            </td>
          </tr>
        </tbody>
      </table>
    </div>
  </div>
</div>